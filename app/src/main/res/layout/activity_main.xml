<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dim_12dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_weight="1"
            android:src="@drawable/download"
            />

        <ImageView

            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_40dp"
            android:padding="@dimen/dim_8dp"
            android:layout_weight="1"
            android:src="@drawable/love"/>

        <ImageView
            android:id="@+id/playlist"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/iconlist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dim_8dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/dim_22sp"
            android:text="@string/song_name"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/dim_16sp"
            android:text="Song Description"
            android:textStyle="italic"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/song_image"
        android:layout_margin="@dimen/dim_30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0dp"
        android:layout_weight="5"
        android:src="@drawable/cd_cover" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dim_8dp"
        >

        <TextView
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/dim_8dp"
            android:text="@string/start_time"
            android:textSize="@dimen/dim_18sp"
            />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_margin="@dimen/dim_8dp"
            android:layout_width="@dimen/dim_0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/dim_30dp"
            android:max="100"
            android:progress="15"
            />

        <TextView
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/dim_8sp"
            android:text="@string/end_time"
            android:textSize="@dimen/dim_18sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dim_12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/play"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_play"/>

        <ImageView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim_30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_next"/>
    </LinearLayout>
    
</LinearLayout>