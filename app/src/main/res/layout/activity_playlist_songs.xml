<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".playlist_songs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playerui"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_weight="1"
            android:src="@drawable/download"
            />

        <ImageView

            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_40dp"
            android:padding="@dimen/dim_8dp"
            android:layout_weight="1"
            android:src="@drawable/love"/>

        <ImageView
            android:id="@+id/playlist"
            android:layout_width="@dimen/dim_0dp"
            android:layout_height="@dimen/dim_40dp"
            android:layout_weight="1"
            android:padding="@dimen/dim_4dp"
            android:src="@drawable/iconlist"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dim_16dp"
            android:layout_marginLeft="@dimen/dim_16dp"
            android:layout_marginRight="@dimen/dim_16dp"
            android:layout_marginTop="@dimen/dim_24dp"
            android:gravity="center"
            android:horizontalSpacing="@dimen/dim_4dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/dim_4dp"   />
    </LinearLayout>
</LinearLayout>